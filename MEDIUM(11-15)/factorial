public class FactorialCalculator {

    public static void main(String[] args) {
        int n = 6; 
        long result = factorial(n);
        System.out.println("The factorial of " + n + " is: " + result);
    }

    public static long factorial(int n) {
        if (n == 0) {
            return 1;
        } else {
            return n * factorial(n - 1);
        }
    }
}
