public class NumberAverages {

    public static void main(String[] args) {
        int[] numbers = {7, -2, 9, -8, -6, -4, 10, -1}; 
        calculateAverages(numbers);
    }

    public static void calculateAverages(int[] numbers) {
        int positiveSum = 0;
        int positiveCount = 0;
        int negativeSum = 0;
        int negativeCount = 0;

        for (int num : numbers) {
            if (num == -1) {
                break;
            }
            if (num > 0) {
                positiveSum += num;
                positiveCount++;
            } else if (num < 0) {
                negativeSum += num;
                negativeCount++;
            }
        }

        double positiveAverage = positiveCount == 0 ? 0 : (double) positiveSum / positiveCount;
        double negativeAverage = negativeCount == 0 ? 0 : (double) negativeSum / negativeCount;

        System.out.printf("The average of negative numbers is: %.1f%n", negativeAverage);
        System.out.printf("The average of positive numbers is: %.8f%n", positiveAverage);
    }
}
