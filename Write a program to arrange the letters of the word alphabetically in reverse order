import java.util.Scanner;
import java.util.Arrays;
import java.util.Collections;

public class ReverseAlphabeticalOrder {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.println("Enter the word: ");
        String word = scanner.nextLine();
        String result = sortAndReverseAlphabetically(word);
        System.out.println("Alphabetical Order in Reverse: " + result);

        scanner.close();
    }

    public static String sortAndReverseAlphabetically(String word) {
        Character[] charArray = new Character[word.length()];
        for (int i = 0; i < word.length(); i++) {
            charArray[i] = word.charAt(i);
        }
        Arrays.sort(charArray, Collections.reverseOrder());

        StringBuilder sortedWord = new StringBuilder();
        for (Character ch : charArray) {
            sortedWord.append(ch).append(" ");
        }

        return sortedWord.toString().trim();
    }
}
