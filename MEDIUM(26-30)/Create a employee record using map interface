import java.util.HashMap;
import java.util.Map;

class Employee {
    int id;
    String name;

    Employee(int id, String name) {
        this.id = id;
        this.name = name;
    }

    @Override
    public String toString() {
        return "Employee{id=" + id + ", name='" + name + "'}";
    }
}

public class EmployeeRecord {
    public static void main(String[] args) {
      
        Map<Integer, Employee> employeeMap = new HashMap<>();
        employeeMap.put(101, new Employee(101, "Alice Johnson"));
        employeeMap.put(102, new Employee(102, "Bob Smith"));
        employeeMap.put(103, new Employee(103, "Charlie Brown"));

        System.out.println("Employee records added:");
        for (Map.Entry<Integer, Employee> entry : employeeMap.entrySet()) {
            System.out.println("ID: " + entry.getKey() + ", " + entry.getValue());
        }

      
        System.out.println("\nIs the map empty? " + employeeMap.isEmpty());
        int idToRemove = 102;
        employeeMap.remove(idToRemove);
        System.out.println("\nRemoved employee with ID: " + idToRemove);

        System.out.println("Employee records after removal:");
        for (Map.Entry<Integer, Employee> entry : employeeMap.entrySet()) {
            System.out.println("ID: " + entry.getKey() + ", " + entry.getValue());
        }
        employeeMap.clear();
        System.out.println("\nEmployee records cleared.");
        System.out.println("Is the map empty? " + employeeMap.isEmpty());
    }
}
