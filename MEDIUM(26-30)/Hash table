import java.util.Hashtable;
import java.util.Map;

public class BankDetails {
    public static void main(String[] args) {
        
        Hashtable<Integer, String> bankDetails = new Hashtable<>();
        bankDetails.put(1001, "Alice Johnson");
        bankDetails.put(1002, "Bob Smith");
        bankDetails.put(1003, "Charlie Brown");

        System.out.println("Records added to the HashTable:");
        for (Map.Entry<Integer, String> entry : bankDetails.entrySet()) {
            System.out.println("Account Number: " + entry.getKey() + ", Customer Name: " + entry.getValue());
        }
        int size = bankDetails.size();
        System.out.println("\nSize of the HashTable: " + size);
        bankDetails.clear();
        System.out.println("\nHashTable cleared.");
        size = bankDetails.size();
        System.out.println("Size of the HashTable after clearing: " + size);
    }
}
